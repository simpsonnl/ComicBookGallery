<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Details</title>
</head>

<body>
    <h1>@ViewBag.SeriesTitle</h1>
    <h2>Issue # @ViewBag.IssueNumber</h2>

    <div>Description: @Html.Raw(ViewBag.Description)</div>

    @if (ViewBag.Artists.Length > 0)
    {
        <h5>Artist: </h5>
        <div>
            <ul>
                @foreach (var artist in ViewBag.Artists)
                {
                    <li>@artist</li>
                }
            </ul>
        </div>
    }

</body>

</html>